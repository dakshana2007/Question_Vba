Sub FormatHindiEnglishKeepEquations()

    Dim doc As Document
    Set doc = ActiveDocument

    Dim para As Paragraph
    Dim rng As Range
    Dim ch As String
    Dim code As Long
    Dim i As Long
    Dim tempRng As Range

    Application.ScreenUpdating = False

    ' Loop through all paragraphs in the document
    For Each para In doc.Paragraphs
        ' Work on paragraph text (exclude paragraph mark at end)
        Set rng = para.Range
        rng.End = rng.End - 1

        ' Loop through each character
        For i = 1 To rng.Characters.Count
            Set tempRng = rng.Characters(i)

            ' Skip if inside equation
            If tempRng.OMaths.Count = 0 Then
                ch = tempRng.Text
                code = AscW(ch)

                ' Hindi Devanagari Unicode block
                If code >= &H900 And code <= &H97F Then
                    tempRng.Font.Name = "Mangal"

                ' English alphabets
                ElseIf (code >= 65 And code <= 90) Or (code >= 97 And code <= 122) Then
                    tempRng.Font.Name = "Bookman Old Style"
                End If
            End If
        Next i
    Next para

    Application.ScreenUpdating = True
    MsgBox "? Done! English ? Bookman Old Style, Hindi ? Mangal, Equations untouched.", vbInformation

End Sub

